{
    "name": "vscode-redis",
    "displayName": "Redis console",
    "description": "Redis console for Visual Studio code",
    "version": "0.0.1",
    "publisher": "kdcro101",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "redis",
        "console",
        "redis console",
        "redis cli"
    ],
    "activationEvents": [
        "onCommand:extension.startConsole"
    ],
    "galleryBanner": {
        "color": "#333333",
        "theme": "dark"
    },
    "icon": "icons/vscode-redis.png",
    "bugs": {
        "url": "https://github.com/kdcro101/vscode-redis/issues"
    },
    "homepage": "https://github.com/kdcro101/vscode-redis/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/kdcro101/vscode-redis.git"
    },
    "main": "./out/extension",
    "contributes": {
        "commands": [{
            "command": "extension.startConsole",
            "title": "Start REDIS console"
        }],
        "configuration": {
            "type": "object",
            "title": "vscode-redis configuration",
            "properties": {
                "redis-console.host": {
                    "type": "string",
                    "default": "localhost",
                    "description": "Redis server ip or hostname"
                },
                "redis-console.port": {
                    "type": "number",
                    "default": 6379,
                    "description": "Redis server listening port"
                },
                "redis-console.hostIpFamily": {
                    "type": "number",
                    "default": 4,
                    "description": "Username to use when connecting"
                },
                "redis-console.password": {
                    "type": "string",
                    "default": "",
                    "description": "Password to use when connecting, leave empty for no password"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/fs-extra": "^5.0.3",
        "@types/ioredis": "^3.2.11",
        "@types/mocha": "^2.2.42",
        "@types/node": "^10.5.0",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.18"
    },
    "dependencies": {
        "fs-extra": "^6.0.1",
        "ioredis": "^3.2.2",
        "rxjs": "^6.2.1"
    }
}